<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.ViewStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/viewStudentImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/view"
                    android:layout_marginTop="8dp"
                    android:onClick="goToViewStudent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Student"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="8dp"
                    android:onClick="goToViewStudent"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/viewStudentRequestImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/request"
                    android:layout_marginTop="8dp"
                    android:onClick="goToViewRequest"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Request"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="8dp"
                    android:onClick="goToViewRequest"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>