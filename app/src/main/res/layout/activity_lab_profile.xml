<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".teacher.LabProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/labNoLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab no.: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileLabNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab no.: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labComputersLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labNoLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computers: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileComputers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computers: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/availableLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labComputersLay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is Available: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileIsAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labForBachelor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/availableLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Bachelor: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileForBachelor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labForMasters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labForBachelor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Masters: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileForMasters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labTeachersIdLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labForMasters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher ID: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileTeacherId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labTeacherNameLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labTeachersIdLay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labTeacherPhoneLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/labTeacherNameLay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Phone: "
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/labProfileTeacherPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="18sp"
                android:textColor="@color/purple_700"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/labTeacherPhoneLay">

            <TextView
                android:id="@+id/remarkTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remarks"
                android:textSize="18sp"
                android:fontFamily="@font/lato"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="25dp"
                    app:cardElevation="12dp"
                    android:fadingEdgeLength="5dp"
                    android:layout_margin="8dp">
                    <ImageView
                        android:id="@+id/addLabRemarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add"
                        android:layout_gravity="end"
                        android:padding="5dp"/>
                    <ImageView
                        android:id="@+id/closeLabRemarks"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close"
                        android:layout_gravity="end"
                        android:padding="5dp"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>